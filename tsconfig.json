{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/dts"
  },
  "includes": ["src/**/*"],
  "exclude": ["test"],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
